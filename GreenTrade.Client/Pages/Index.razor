@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Dashboard - GreenTrade</PageTitle>

<div class="row">
    <div class="col-md-12">
        <h1 class="text-success mb-4">Dashboard de Trading</h1>
        <p class="text-muted">Bem-vindo à plataforma GreenTrade. Aqui você pode acompanhar o mercado de commodities agrícolas.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="text-success"><i class="fas fa-chart-line"></i> Mercado</h5>
            <p class="display-6 mt-3">R$ 5,24</p>
            <small class="text-muted">USD/BRL - Tempo Real</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="text-success"><i class="fas fa-coffee"></i> Café Arábica</h5>
            <p class="display-6 mt-3">R$ 1.250,00</p>
            <small class="text-muted">Saca 60kg - NY</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="text-success"><i class="fas fa-bell"></i> Alertas Ativos</h5>
            <p class="display-6 mt-3">3</p>
            <small class="text-muted">Notificações configuradas</small>
        </div>
    </div>
</div>
