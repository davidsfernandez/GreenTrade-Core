@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using GreenTrade.Client.Services
@using GreenTrade.Shared.DTOs
@using System.Security.Claims
@attribute [Authorize]
@inject IUserService UserService
@attribute [Authorize]
@inject AuthenticationStateProvider AuthStateProvider
@inject NotificationService NotificationService

<PageTitle>Meu Perfil - GreenTrade</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h2 class="mb-4">Meu Perfil</h2>
            
            @if (_user == null)
            {
                <div class="d-flex justify-content-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem;">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="ms-4">
                                <h4 class="mb-0">@_user.FullName</h4>
                                <span class="badge bg-warning text-dark">@_user.Role</span>
                            </div>
                        </div>

                        <EditForm Model="_updateRequest" OnValidSubmit="HandleUpdateProfile">
                            <DataAnnotationsValidator />
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">E-mail</label>
                                <input type="text" class="form-control" value="@_user.Email" readonly disabled />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Nome Completo</label>
                                <InputText class="form-control" @bind-Value="_updateRequest.FullName" />
                                <ValidationMessage For="@(() => _updateRequest.FullName)" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mt-3" disabled="@_isProcessing">
                                @if (_isProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Salvar Perfil
                            </button>
                        </EditForm>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Alterar Senha</h5>
                        <EditForm Model="_changePasswordRequest" OnValidSubmit="HandleChangePassword">
                            <DataAnnotationsValidator />
                            
                            <div class="mb-3">
                                <label class="form-label">Senha Atual</label>
                                <InputText type="password" class="form-control" @bind-Value="_changePasswordRequest.CurrentPassword" />
                                <ValidationMessage For="@(() => _changePasswordRequest.CurrentPassword)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nova Senha</label>
                                <InputText type="password" class="form-control" @bind-Value="_changePasswordRequest.NewPassword" />
                                <ValidationMessage For="@(() => _changePasswordRequest.NewPassword)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Confirmar Nova Senha</label>
                                <InputText type="password" class="form-control" @bind-Value="_changePasswordRequest.ConfirmPassword" />
                                <ValidationMessage For="@(() => _changePasswordRequest.ConfirmPassword)" />
                            </div>

                            <button type="submit" class="btn btn-secondary w-100 mt-3" disabled="@_isProcessingPassword">
                                @if (_isProcessingPassword)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Alterar Senha
                            </button>
                        </EditForm>
                    </div>
                </div>
            }
            
            <div class="text-center text-muted small mt-4">
                Vers√£o do Sistema: 1.0.2-stable
            </div>
        </div>
    </div>
</div>

@code {
    private UserDto? _user;
    private UpdateProfileRequest _updateRequest = new();
    private ChangePasswordRequest _changePasswordRequest = new();
    private bool _isProcessing;
    private bool _isProcessingPassword;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        _user = await UserService.GetProfile();
        if (_user != null)
        {
            _updateRequest.FullName = _user.FullName;
        }
    }

    private async Task HandleUpdateProfile()
    {
        _isProcessing = true;
        try
        {
            var success = await UserService.UpdateProfile(_updateRequest);
            if (success)
            {
                NotificationService.ShowSuccess("Perfil atualizado com sucesso!");
                await LoadUserData();
            }
            else
            {
                NotificationService.ShowError("Erro ao atualizar perfil.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Erro: {ex.Message}");
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task HandleChangePassword()
    {
        _isProcessingPassword = true;
        try
        {
            var response = await UserService.ChangePassword(_changePasswordRequest);
            if (response.Success)
            {
                NotificationService.ShowSuccess(response.Message);
                _changePasswordRequest = new(); // Reset form
            }
            else
            {
                NotificationService.ShowError(response.Message);
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Erro: {ex.Message}");
        }
        finally
        {
            _isProcessingPassword = false;
        }
    }
}
