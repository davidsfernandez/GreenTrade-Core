using GreenTrade.Client.Services
using GreenTrade.Shared.Services
using GreenTrade.Shared.Models
using System.Net.Http.Json

@inject IPriceCalculatorService Calculator
@inject FormatterService Formatter
@inject HttpClient Http

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-calculator me-2"></i> Calculadora de Preço Justo (Café)</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">NY (Centavos/lb)</label>
                <input type="number" step="0.01" class="form-control" @bind="nyPrice" @bind:event="oninput" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Dólar (R$)</label>
                <input type="number" step="0.0001" class="form-control" @bind="dollarRate" @bind:event="oninput" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Diferencial (R$)</label>
                <input type="number" step="1" class="form-control" @bind="basis" @bind:event="oninput" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-outline-success w-100" @onclick="UseMarketPrices">
                    <i class="fas fa-sync-alt me-1"></i> Usar Mercado
                </button>
            </div>
        </div>

        <div class="mt-4 p-4 bg-light rounded text-center">
            <h6 class="text-muted text-uppercase mb-2">Preço Sugerido por Saca</h6>
            <h2 class="text-success display-5 fw-bold">@Formatter.FormatCurrency(Result)</h2>
            <p class="text-muted small mb-0">Baseado no padrão de 60kg (132.276 lbs)</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public decimal CurrentArabica { get; set; }
    [Parameter] public decimal CurrentDollar { get; set; }

    private decimal nyPrice;
    private decimal dollarRate;
    private decimal basis;

    private decimal Result => Calculator.CalculateCoffeeBagPrice(nyPrice, dollarRate, basis);

    protected override async Task OnInitializedAsync()
    {
        nyPrice = CurrentArabica;
        dollarRate = CurrentDollar;
        
        try 
        {
            var settings = await Http.GetFromJsonAsync<MarketSettings>("api/marketsettings");
            if (settings != null)
            {
                basis = settings.CoffeeBasis;
            }
        }
        catch { /* Fallback to 0 */ }
    }

    private void UseMarketPrices()
    {
        nyPrice = CurrentArabica;
        dollarRate = CurrentDollar;
    }
}
